# ===========================================
# Port Sol Configuration (Solana-native)
# ===========================================

# Solana RPC
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Treasury wallet (receives entry fees, sends cashout rewards)
TREASURY_PUBKEY=YOUR_TREASURY_PUBKEY_HERE
TREASURY_KEYPAIR=YOUR_TREASURY_KEYPAIR_JSON_ARRAY

# Entry fee in lamports (default: 0.1 SOL = 100,000,000 lamports)
ENTRY_FEE_LAMPORTS=100000000

# API Server
API_URL=http://localhost:8000
# Set to true to enable /debug/* endpoints and skip on-chain checks
DEBUG_MODE=true

# Agent wallets (Solana pubkeys for demo bots)
MINER_WALLET=YOUR_MINER_BOT_PUBKEY
MINER_KEYPAIR=YOUR_MINER_BOT_KEYPAIR_JSON

TRADER_WALLET=YOUR_TRADER_BOT_PUBKEY
TRADER_KEYPAIR=YOUR_TRADER_BOT_KEYPAIR_JSON

GOVERNOR_WALLET=YOUR_GOVERNOR_BOT_PUBKEY
GOVERNOR_KEYPAIR=YOUR_GOVERNOR_BOT_KEYPAIR_JSON

# ===========================================
# PostgreSQL Database
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/portsol

# ===========================================
# Moltbook Integration (Optional)
# ===========================================
# Get API keys at: https://www.moltbook.com/api/v1/agents/register

MOLTBOOK_HOST_KEY=your_moltbook_host_api_key
MOLTBOOK_MINER_KEY=your_moltbook_miner_api_key
MOLTBOOK_TRADER_KEY=your_moltbook_trader_api_key
MOLTBOOK_GOVERNOR_KEY=your_moltbook_governor_api_key

# ===========================================
# LLM Integration (OpenRouter)
# ===========================================
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-3-flash-preview
